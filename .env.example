# ============================================================================
# SKININTEL - Example environment file (safe to commit)
# Copy to .env (or keep as .env.txt and reference via docker-compose).
# ============================================================================

# Postgres
POSTGRES_USER=airflow
POSTGRES_PASSWORD=change_me
POSTGRES_DB=airflow

# App DB connection (used by scraper scripts via utils/db.py)
DATABASE_URL=postgresql+psycopg2://airflow:change_me@postgres:5432/airflow

# Airflow (UI/API)
AIRFLOW__WEBSERVER__SECRET_KEY=change_me
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:change_me@postgres:5432/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Airflow admin user (created on container start)
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=change_me
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Flask
FLASK_ENV=production
FLASK_SECRET_KEY=change_me

# Flask -> Airflow API
AIRFLOW_URL=http://airflow-webserver:8080
AIRFLOW_USER=admin
AIRFLOW_PASSWORD=change_me

# Shared data directory inside the flask container
APP_DATA_DIR=/app/data

# DeepSeek (OpenAI-compatible) - optional
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
